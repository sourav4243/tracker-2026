generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model DSAQuestion {
  id        String   @id @default(cuid())
  title     String
  link      String?
  phase     String
  topic     String
  status    String   @default("TODO") // TODO, REVISIT, DONE
  difficulty String?
  completedAt DateTime? // Track when question was solved
  revisions DSARevision[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DSARevision {
  id         String   @id @default(cuid())
  questionId String
  question   DSAQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  status     String   // Status it was changed to (DONE or REVISIT)
  createdAt  DateTime @default(now())
  
  @@index([questionId])
}

model CSConcept {
  id        String   @id @default(cuid())
  subject   String   // OS, DBMS, Networking, OOPS
  topic     String
  status    String   @default("TODO")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DailyLog {
  id        String   @id @default(cuid())
  date      DateTime @unique @db.Date
  exercise  Boolean  @default(false)
  coding    Boolean  @default(false)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
